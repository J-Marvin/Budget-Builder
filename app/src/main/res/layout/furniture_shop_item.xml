<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_furniture"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/chair_se" />

    <ImageView
        android:id="@+id/iv_furniture_coin"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_furniture"
        app:layout_constraintEnd_toStartOf="@+id/tv_price"
        app:layout_constraintTop_toBottomOf="@+id/iv_furniture"
        app:srcCompat="@drawable/money" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_furniture_coin"
        app:layout_constraintEnd_toEndOf="@+id/iv_furniture"
        app:layout_constraintTop_toTopOf="@+id/iv_furniture_coin" />

    <ImageView
        android:id="@+id/iv_furniture_check"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_furniture"
        app:layout_constraintEnd_toStartOf="@+id/iv_furniture_coin"
        app:layout_constraintTop_toBottomOf="@+id/iv_furniture"
        app:srcCompat="@drawable/check"
        app:tint="@color/green" />

</androidx.constraintlayout.widget.ConstraintLayout>